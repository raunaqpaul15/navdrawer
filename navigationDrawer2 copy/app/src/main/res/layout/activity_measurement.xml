<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:fitsSystemWindows="true">



        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:singleLine="true"
            android:id="@+id/Reference"
            android:hint="Enter Reference Number"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:id="@+id/button"
            android:layout_weight="0.1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:singleLine="true"
            android:id="@+id/Date"
            android:hint="Chosen Date"/>

        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:singleLine="true"
            android:id="@+id/Email"
            android:hint="Email Id"/>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="0.9"
            android:id="@+id/tablelayout">
            <TableRow android:padding="10dp"
                android:weightSum="0.1"
                android:background="#b7d2f7"
                >
                <TextView
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"


                    android:text="Vitals"
                    android:textSize="20dp" />
                <TextView
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"


                    android:text="Values"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    />
                <TextView
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="2"

                    android:text="Zone"
                    android:layout_gravity="left"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow android:weightSum="0.1"
                android:padding="10dp"
                android:background="#FFFCF7F7" >

                <TextView

                    android:text="Height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    />
                <TextView

                    android:id="@+id/HEIGHT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_column="1"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView"
                    android:layout_column="2"
                    android:background="#ff9100"
                    />

            </TableRow>

            <TableRow android:weightSum="0.1"
                android:padding="10dp"
                android:background="#b7d2f7">

                <TextView

                    android:text="Weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <TextView

                    android:id="@+id/WEIGHT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView2"
                    android:layout_column="2"
                    android:background="#ff9100"
                    />

            </TableRow>
            <TableRow android:weightSum="0.1"
                android:padding="10dp"
                android:background="#FFFCF7F7">

                <TextView

                    android:text="BMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView

                    android:id="@+id/BMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView3"
                    android:layout_column="2"
                    android:background="#ff9100"
                    />

            </TableRow>

            <TableRow android:weightSum="0.1"  android:padding="10dp"
                android:background="#b7d2f7" >

                <TextView

                    android:text="Blood Pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView

                    android:id="@+id/BP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView4"
                    android:layout_column="2"
                    android:background="#15f70d"
                    />

            </TableRow>
            <TableRow android:weightSum="0.1"
                android:padding="10dp"
                android:background="#FFFCF7F7" >

                <TextView

                    android:text="Pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView

                    android:id="@+id/PULSE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView5"
                    android:layout_column="2"
                    android:background="#15f70d"
                    />

            </TableRow>

            <TableRow android:weightSum="0.1"
                android:padding="10dp"
                android:background="#b7d2f7" >

                <TextView

                    android:text="Temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView

                    android:id="@+id/TEMP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView6"
                    android:layout_column="2"
                    android:background="#15f70d"

                    />

            </TableRow>
            <TableRow android:weightSum="0.1"
                android:padding="10dp"
                android:background="#FFFCF7F7">

                <TextView

                    android:text="GlucoseLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView

                    android:id="@+id/GL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView8"
                    android:layout_column="2"
                    android:background="#ff9100"
                    />

            </TableRow>

            <TableRow android:weightSum="0.1"
                android:padding="10dp"
                android:background="#b7d2f7">

                <TextView

                    android:text="Oxygen Level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView

                    android:id="@+id/OL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView7"
                    android:layout_column="2"

                    android:background="#ff0000"
                    />

            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Graph"
            android:id="@+id/graph"
            android:layout_weight="0.1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

</ScrollView>